{
  "app-id": "com.github.giacomogroppi.writernote-qt",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.2",
  "sdk": "org.kde.Sdk",
  "command": "writernote",
  "finish-args": [
    "--socket=wayland",
    "--socket=fallback-x11",
    "--socket=pulseaudio",
    "--share=network",
    "--share=ipc",
    "--filesystem=xdg-run/pipewire-0",
    "--filesystem=host",
    "--talk-name=org.kde.StatusNotifierWatcher",
    "--talk-name=org.freedesktop.Flatpak",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.a11y.Bus",
    "--own-name=org.kde.StatusNotifierItem-2-2",
    "--system-talk-name=org.freedesktop.Avahi"
  ],
  "add-extensions": {
  },
  "cleanup": [
    "/lib/pkgconfig",
    "/share/man",
    "*.la"
  ],
  "modules": [
    {
      "name": "Libzip",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DCMAKE_INSTALL_LIBDIR=/app/lib",
        "-DCMAKE_INSTALL_INCLUDEDIR=7app/include"
      ],
      "cleanup": [
        "/bin"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/nih-at/libzip.git",
          "tag": "v1.8.0",
          "commit": "26ba5523db09213f532821875542dba7afa04b65"
        }
      ]
    },
    {
      "name": "Poppler",
      "buildsystem": "cmake-ninja",
      "config-opts":[
        "-DCMAKE_INSTALL_LIBDIR=/app/lib",
        "-DCMAKE_INSTALL_INCLUDEDIR=/app/include",
        "-DENABLE_BOOST=OFF",
        "-DENABLE_LIBOPENJPEG=none"
      ],
      "cleanup":[
        "/bin"
      ],
      "sources":[
        {
          "type": "git",
          "url": "https://github.com/freedesktop/poppler.git",
          "tag": "poppler-22.05.0"
        }
      ]
    },
    {
      "name": "writernote",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DFLATPAK_BUILD=ON",
        "-DVERSION_SNAPCRAFT=4.0.0h"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/giacomogroppi/writernote-qt",
          "tag": "4.0.0h"
        }
      ]
    }
  ]
}
